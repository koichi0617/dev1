<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
    <%#<form action="/login" method="post">を生成 %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード" %>
      <%= link_to '(パスワードを覚えていない方)', new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <p>登録はお済みですか？ <%= link_to "ユーザー登録", signup_path %></p>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <%= link_to 'LINEログイン', 'https://access.line.me/oauth2/v2.1/authorize?response_type=code&client_id=1654902921&redirect_uri=https://agile-inlet-26178.herokuapp.com/callback&scope=openid' %>
  </div>
</div>