<div class="p-comment__item">
  <span>
    <%= @comment.user.name %>&emsp;/&emsp;<%= @comment.user.major.name %>&emsp;
  </span>
  <p><%= simple_format(comment.content) %></p>
  <p><%= image_tag comment.picture if comment.picture? %></p>
  <div class="p-comment__bottomLine">
    <span>Posted <%= time_ago_in_words(comment.created_at) %> ago.</span>
    <span><%= link_to "削除", comment, method: :delete, data: { confirm: "削除しますか？" } %></span>
  </div>
</div>