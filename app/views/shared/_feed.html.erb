<ol class="microposts">
  <% feed_items.each do |micropost| %>
    <li id="micropost-<%= micropost.id %>">

      <div class="category">
        <% if micropost.solve == true %>
          解決済み
        <% else %>
          未解決
        <% end %>
        &emsp;/&emsp;<%= micropost.subject %>&emsp;/&emsp;<%= micropost.major.name %>
      </div>

      <div class="who">
        <%= link_to gravatar_for(micropost.user, size: 25), micropost.user %>
        <span class="user"><%= link_to micropost.user.name, micropost.user %>&emsp;/&emsp;<%= micropost.user.major.name %></span>
      </div>

      <div class="content">
        <div class="q-text"><%= micropost.content %></div>
        <div class="q-pic"><%= image_tag micropost.picture.url if micropost.picture? %></div>
      </div>

      <div class="timestamp">
        <div><%= link_to micropost do %><i class="far fa-comment"></i>&nbsp;<%= micropost.comments.count %><% end %>&emsp;</div>
        <div>Posted <%= time_ago_in_words(micropost.created_at) %> ago.&emsp;</div>
        <% if current_user?(micropost.user) %>
          <div>
            <%= link_to micropost_path(micropost.id), method: :delete, title: '投稿削除',
                       data: { confirm: '削除しますか?',
                                commit: '削除',
                                cancel: 'キャンセル' 
                              }  do %>
              <i class="fas fa-trash" style="color: black;"></i>
            <% end %>&emsp;
          </div>
        <% end %>
      </div>

    </li>
  <% end %>
</ol>

<%= will_paginate feed_items %>