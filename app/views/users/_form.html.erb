<%= form_for(@user, url: yield(:url)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, "名前" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :major_id, "学部・学科" %>
  <%= f.collection_select :major_id, Major.all, :id, :name, {prompt: '選択してください'} %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email, class: 'form-control' %>

  <%= f.label :password, "パスワード" %>
  <%= f.text_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "パスワード確認" %>
  <%= f.text_field :password_confirmation, class: 'form-control' %>

  <%= f.label :profile, "プロフィール" %>
  <%= f.text_field :profile, class: 'form-control', rows: 6 %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>