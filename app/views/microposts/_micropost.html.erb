<li id="micropost-<%= micropost.id %>">

  <div class="category">
    <% if micropost.solve == true %>
      解決済み
    <% else %>
      未解決
    <% end %>
    &emsp;/&emsp;<%= micropost.subject %>
  </div>

  <div class="who">
    <%= link_to gravatar_for(micropost.user, size: 25), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %>&emsp;/&emsp;<%= micropost.user.major.name %></span>
  </div>

  <div class="content">
    <div class="q-text"><%= micropost.content %></div>
    <div class="q-pic"><%= image_tag micropost.picture.url if micropost.picture? %></div>
  </div>

  <div class="timestamp">
    <div><i class="far fa-comment"></i>&nbsp;<%= micropost.comments.count %>&emsp;</div>
    <div>Posted <%= time_ago_in_words(micropost.created_at) %> ago.&emsp;</div>
    <div><%= link_to '詳細', micropost %> &emsp;</div>
    <% if current_user?(micropost.user) %>
      <div>
        <%= link_to "削除", micropost, method: :delete,
                                        data: { confirm: "削除しますか？" } %>
      </div>
      <div>&emsp;</div>
    <% end %>
  </div>

</li>