<% provide(:title, "About") %>

<h1>詳細</h1>

<div class="question">
  <div>
    <% if @micropost.solve == true %>
      解決済み
    <% else %>
      未解決
    <% end %>
  </div>
  <div clas="">
    <%= @micropost.user.name %>&emsp;/&emsp;<%= @micropost.user.major.name %>&emsp;/&emsp;
    <%= @micropost.subject %>
  <div>
    <%= @micropost.content %>
  </div>
  <div>
    <%= image_tag @micropost.picture.url if @micropost.picture? %>
  </div>
  <div>
    Posted <%= time_ago_in_words(@micropost.created_at) %> ago.&emsp;
  </div>
</div>

<div class="p-comment_list">
  <div class="p-comment_listTitle">コメント</div>
  <%= render @micropost.comment %>
  </div>
</div>

<% if current_user == @micropost.user %>
  <div class='solve_button'>
    <% if @micropost.solve == false %>
      <%= button_to '解決！', solve_path(@micropost), method: :post %>
    <% else %>
      <%= button_to 'やっぱりわかんない', solve_path(@micropost), method: :post %>
    <% end %>
  </div>
<% end %>

<%= render 'comments/form', locals: { comment: @comment } %>